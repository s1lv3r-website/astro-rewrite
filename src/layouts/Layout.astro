---
const siteName = "S1LV3R";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? `${title} | ${siteName}` : siteName}</title>
  </head>
  <body>
    <!-- <div class="flex h-full flex-col overflow-auto [&>*]:m-auto"> -->
    <div class="h-full overflow-auto [&>*]:m-auto">
      <div class="p-2 px-6 md:max-w-3xl">
        <h1 class="mb-2!">{siteName}</h1>
        <div class="mb-2">
          <a href="/" class={[Astro.url.pathname === "/" ? "underline" : ""].toString()}
            >home</a
          > | <a class={[Astro.url.pathname === "/blog" ? "underline" : ""].toString()} href="/blog">blog</a>
        </div>
        <slot />
      </div>
    </div>
  </body>
</html>

<style is:global lang="scss">
  @use "tailwindcss";
  @plugin '@tailwindcss/typography';

  * {
    @apply box-border;
    font-size: 102%;
  }

  html,
  body {
    @apply m-0 h-full w-full p-0;
    @apply bg-[#141414] font-mono text-[#ebebeb];
    @apply overflow-auto;
  }

  h1 {
    @apply my-4 text-4xl font-bold;
  }

  h2 {
    @apply my-3 mt-5 text-3xl font-bold leading-normal;
  }

  h3 {
    @apply my-1 text-2xl font-semibold;
  }
</style>
